# Kafka Connect Iceberg Sink - Dual Cluster Configuration
# ========================================================
#
# Copy this file to .env and configure your settings:
#   cp .env.sample .env
#
# Then edit .env with your license key and any customizations.

# =============================================================================
# MinIO Container Images
# =============================================================================

# Source MinIO Cluster (with Kafka log targets from PR #2463)
# This image has MINIO_LOG_API_KAFKA_* environment variables support
MINIO_SOURCE_IMAGE=praveenminio/eos:log

# Destination MinIO Cluster (with Iceberg Tables/REST Catalog support)
# EDGE release with native Apache Iceberg REST catalog built into AIStor
MINIO_DEST_IMAGE=quay.io/minio/aistor/minio:EDGE.2025-12-13T08-46-12Z

# =============================================================================
# MinIO License (REQUIRED)
# =============================================================================

# MinIO License (required for AIStor features)
# Get your license from https://min.io/pricing
# IMPORTANT: Add your license key here
MINIO_LICENSE=<your-license-key-here>

# =============================================================================
# MinIO Credentials
# =============================================================================

# MinIO Credentials (same for both clusters for simplicity)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =============================================================================
# Kafka Configuration
# =============================================================================

KAFKA_IMAGE=confluentinc/cp-kafka:7.5.0
KAFKA_CONNECT_IMAGE=confluentinc/cp-kafka-connect:7.5.0

# =============================================================================
# Trino Configuration
# =============================================================================

TRINO_IMAGE=trinodb/trino:477

# =============================================================================
# Iceberg Configuration
# =============================================================================

# Iceberg Connector Version (installed in plugins directory)
ICEBERG_CONNECTOR_VERSION=0.6.19

# Warehouse Configuration (on destination cluster)
WAREHOUSE_NAME=kafkawarehouse
NAMESPACE_NAME=streaming

# =============================================================================
# Kafka Topics (Log Types)
# =============================================================================

# These topics are created automatically and correspond to MinIO log targets
API_LOGS_TOPIC=apilogs
ERROR_LOGS_TOPIC=errorlogs
AUDIT_LOGS_TOPIC=auditlogs

# =============================================================================
# Network Ports
# =============================================================================

# Source Cluster (nginx-source)
SOURCE_API_PORT=9000
SOURCE_CONSOLE_PORT=9001

# Destination Cluster (nginx-dest)
DEST_API_PORT=9010
DEST_CONSOLE_PORT=9011

# Kafka
KAFKA_EXTERNAL_PORT=9092

# Kafka Connect REST API
KAFKA_CONNECT_PORT=8083

# Trino Web UI / JDBC
TRINO_PORT=9999
